<%- include("header") -%>

    <div class="box" id="heading">

        <h1> <%=listTitle%> </h1>
    </div>


    <div class="box">
        
            <!-- <li><%=newListItem%></li>-->
            <% newListItem.forEach(function(items) { %>
                <form action="/delete", method="post">

                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= items.id %>" onchange="this.form.submit()" >
                        <p><%=   items.name   %></p>
                        
                    </div>
                </form>

            <% }) %>
     
            <form action="/" method="post" class="item">
                <input type="text" placeholder="New Item" name="newItem" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
    </div>


    <%- include("footer") -%>